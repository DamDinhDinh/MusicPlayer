<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="70dp">
    <LinearLayout
        android:id="@+id/layoutSongNameAndArtist"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/imgBtnSongMenuItem">

        <TextView
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/tvSongTitleItem"
            android:paddingTop="3dp"
            android:paddingLeft="30dp"
            android:gravity="left"
            android:textSize="20sp"
            android:text="Song name"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TextView
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/tvSongArtistItem"
            android:paddingTop="5dp"
            android:paddingLeft="30dp"
            android:text="Artist name"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/imgBtnSongMenuItem"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:background="@drawable/baseline_menu_white_48dp"/>
</RelativeLayout>