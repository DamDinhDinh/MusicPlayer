<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:id="@+id/topPanel"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <LinearLayout
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/imgBtnMenuLyric"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingTop="3dp"
                android:paddingLeft="30dp"
                android:id="@+id/tvSongTitlePlayingLyric"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textSize="20sp" />

            <TextView
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingLeft="30dp"
                android:id="@+id/tvSongArtistPlayingLyric"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textSize="19sp"/>

        </LinearLayout>




        <ImageButton
            android:id="@+id/imgBtnMenuLyric"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/baseline_menu_white_48dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:id="@+id/tvLyricError"
            android:text="Sorry, Lyrics not available!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>